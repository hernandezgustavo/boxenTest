startup_message off

backtick 101 60 60 $HOME/.config/d62/battery-life.sh

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%101` %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'
termcapinfo xterm* ti@:te@
defscrollback 10000

# Open some tabs by default
screen -t vim
screen -t grunt
screen -t bash
screen -t mapi
